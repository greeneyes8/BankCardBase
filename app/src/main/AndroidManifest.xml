<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mohse78.bankcardbase">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_Banks"
            android:label="@string/bankSelection"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".Activity_Persons"
            android:label="@string/personSelection"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />

        <activity android:name=".Activity_Transaction" />

        <activity android:name=".Activity_TransactionTypeDebit"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/transactionTypeDebits"
            />

        <activity android:name=".Activity_TransactionTypeCredit"
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:label="@string/transactionTypeCredits"
            ></activity>
    </application>

</manifest>