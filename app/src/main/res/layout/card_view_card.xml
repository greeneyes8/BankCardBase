<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:gravity="center_horizontal"

    >
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/shadow"
        app:cardCornerRadius="15dp"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear_card_view_card_back"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="5859 8310 2713 6042"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/text_card_view_card_cardNumber"
                android:textColor="@android:color/black"
                android:background="@drawable/back_trans_white"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ابوطالب محمدی"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/text_card_view_card_personName"
                android:textColor="@android:color/black"
                android:background="@drawable/back_trans_white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/back_trans_white"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cvv2 : "
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3515"
                        android:textSize="15sp"
                        android:id="@+id/text_card_view_card_cvv2_content"
                        android:textColor="@android:color/black"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98-04"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:id="@+id/text_card_view_card_expDate_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تاریخ انقضا : "
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:gravity="right|center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/share_black"
                android:id="@+id/image_card_view_card_shareCard"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ریال"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:id="@+id/text_card_view_card_amountType_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/text_card_view_card_balance_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="میزان دارایی : "
            android:textSize="15sp"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        />
</LinearLayout>